<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorOnPrimary">@color/color_white_opaque</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorOnSecondary">@color/color_white_opaque</item>
        <item name="colorError">@color/color_error</item>
        <item name="colorOnError">@color/color_white_opaque</item>
        <item name="colorSurface">@color/color_background_contrast</item>
        <item name="colorOnSurface">@color/color_grey</item>
        <item name="android:colorBackground">@color/color_background</item>
        <item name="colorOnBackground">@color/color_grey</item>
        <item name="android:windowBackground">@color/color_background</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:statusBarColor">@color/color_system_bar</item>
        <item name="android:navigationBarColor">@color/color_system_bar</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.AppActivityAnimation</item>
        <item name="android:alertDialogTheme">@style/AppTheme.AlertDialog</item>
        <item name="fontFamily">@font/opensansregular</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>
        <item name="checkboxStyle">@style/AppTheme.Checkbox</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark" />

    <style name="AppTheme.BottomSheetModal" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottom_sheet</item>
    </style>

    <style name="AppTheme.AlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:colorPrimary">@color/text_primary</item>
        <item name="android:colorAccent">@color/color_primary</item>
    </style>

    <style name="AppTheme.BaseBottomSheetDialog" parent="@style/Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppTheme.BottomSheetModal</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.BaseBottomSheetDialog.Animation
        </item>
    </style>

    <style name="AppTheme.BaseBottomSheetDialog.Animation" parent="Animation.Design.BottomSheetDialog">
        <item name="android:windowEnterAnimation">@anim/bottom_sheet_open</item>
        <item name="android:windowExitAnimation">@anim/bottom_sheet_close</item>
    </style>

    <style name="AppTheme.BaseBottomSheetDialog.BottomSheetDialog">
        <item name="android:statusBarColor">@color/color_transparent</item>
        <item name="android:navigationBarColor">@color/color_system_bar</item>
    </style>

    <style name="AppTheme.AppActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="AppTheme.InputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- The color of the label in all other text field states (such as resting and disabled) -->
        <item name="android:textColorHint">@color/selector_input_layout</item>
        <!-- The color of the label when it is collapsed and the text field is active -->
        <item name="hintTextColor">@color/selector_input_layout</item>
        <item name="boxStrokeColor">@color/selector_input_layout</item>
    </style>

    <style name="AppTheme.Checkbox" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="AppTheme.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.TextButton.Menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/color_on_background</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="AppTheme.TextButton.Menu.Small">
        <item name="android:textSize">@dimen/text_size_xsmall</item>
    </style>

    <style name="AppTheme.GroupButtonItem" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_xsmall</item>
    </style>

    <style name="AppTheme.ClickableIcon">
        <item name="android:layout_width">@dimen/clickable_area</item>
        <item name="android:layout_height">@dimen/clickable_area</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="AppTheme.ExtendedFab" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/extended_fab_height</item>
        <item name="android:paddingLeft">@dimen/padding_regular</item>
        <item name="android:paddingRight">@dimen/padding_regular</item>
        <item name="android:elevation">@dimen/elevation_regular</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/color_white_opaque</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="enforceTextAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="backgroundTint">@drawable/selector_extended_fab</item>
        <item name="cornerRadius">@dimen/extended_fab_corner_radius</item>
        <item name="iconPadding">@dimen/padding_small</item>
        <item name="iconSize">@dimen/extended_fab_icon_size</item>
        <item name="iconTint">@color/color_white_opaque</item>
    </style>

    <style name="AppTheme.RecyclerView">
        <item name="android:clipToPadding">false</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:layout_marginTop">@dimen/margin_regular</item>
        <item name="android:paddingLeft">@dimen/padding_regular</item>
        <item name="android:paddingRight">@dimen/padding_regular</item>
        <item name="android:paddingBottom">@dimen/padding_regular</item>
    </style>

    <style name="AppTheme.ProgressBarStyle" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="android:indeterminate">true</item>
        <item name="android:layout_height">@dimen/progress_bar_size</item>
        <item name="android:layout_width">@dimen/progress_bar_size</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.ProgressBarHorizontalStyle" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminate">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AppTheme.Text" />

    <style name="AppTheme.Text.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="AppTheme.Text.SectionTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
    </style>

    <style name="AppTheme.Text.Body">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
    </style>

    <style name="AppTheme.Text.Detail">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="AppTheme.Text.Body.White">
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="AppTheme.Text.Detail.White">
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="AppTheme.Text.Tag">
        <item name="android:paddingEnd">@dimen/padding_xsmall</item>
        <item name="android:textColor">@color/color_tag</item>
        <item name="android:textSize">@dimen/text_size_xsmall</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.ListItem">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
    </style>

    <style name="AppTheme.Text.ListItem.Tag">
        <item name="android:textColor">@color/color_tag</item>
    </style>

    <style name="AppTheme.ChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">@dimen/text_size_xsmall</item>
    </style>
</resources>
