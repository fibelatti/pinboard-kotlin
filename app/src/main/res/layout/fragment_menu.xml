<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_regular"
        android:paddingTop="@dimen/padding_large"
        android:paddingEnd="@dimen/padding_regular">

        <TextView
            android:id="@+id/menuItemAll"
            style="@style/AppTheme.TextButton.Menu"
            android:text="@string/menu_navigation_all" />

        <TextView
            android:id="@+id/menuItemRecent"
            style="@style/AppTheme.TextButton.Menu"
            android:text="@string/menu_navigation_recent" />

        <TextView
            android:id="@+id/menuItemPublic"
            style="@style/AppTheme.TextButton.Menu"
            android:text="@string/menu_navigation_public" />

        <TextView
            android:id="@+id/menuItemPrivate"
            style="@style/AppTheme.TextButton.Menu"
            android:text="@string/menu_navigation_private" />

        <TextView
            android:id="@+id/menuItemUnread"
            style="@style/AppTheme.TextButton.Menu"
            android:text="@string/menu_navigation_unread" />

        <TextView
            android:id="@+id/menuItemUntagged"
            style="@style/AppTheme.TextButton.Menu"
            android:text="@string/menu_navigation_untagged" />

        <TextView
            android:id="@+id/menuItemTags"
            style="@style/AppTheme.TextButton.Menu"
            android:text="@string/menu_navigation_tags" />

        <TextView
            android:id="@+id/menuItemNotes"
            style="@style/AppTheme.TextButton.Menu"
            android:text="@string/menu_navigation_notes" />

        <TextView
            android:id="@+id/menuItemPopular"
            style="@style/AppTheme.TextButton.Menu"
            android:text="@string/menu_navigation_popular" />

        <include
            layout="@layout/layout_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_size"
            android:layout_marginTop="@dimen/margin_regular"
            android:layout_marginBottom="@dimen/margin_regular" />

        <TextView
            android:id="@+id/menuItemPreferences"
            style="@style/AppTheme.TextButton.Menu"
            android:drawablePadding="@dimen/padding_regular"
            android:text="@string/menu_navigation_preferences"
            app:drawableStartCompat="@drawable/ic_preferences" />

        <TextView
            android:id="@+id/menuItemLogout"
            style="@style/AppTheme.TextButton.Menu"
            android:drawablePadding="@dimen/padding_regular"
            android:text="@string/menu_navigation_logout"
            app:drawableStartCompat="@drawable/ic_person" />

        <include
            layout="@layout/layout_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_size"
            android:layout_marginTop="@dimen/margin_regular"
            android:layout_marginBottom="@dimen/margin_regular" />

        <TextView
            android:id="@+id/menuItemShare"
            style="@style/AppTheme.TextButton.Menu.Small"
            android:text="@string/about_share" />

        <TextView
            android:id="@+id/menuItemRate"
            style="@style/AppTheme.TextButton.Menu.Small"
            android:text="@string/about_rate" />

        <TextView
            android:id="@+id/menuItemAbout"
            style="@style/AppTheme.Text.Caveat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/about_developer"
            android:textIsSelectable="false"
            app:fontFamily="@font/jetbrainsmono" />

        <TextView
            android:id="@+id/menuItemVersion"
            style="@style/AppTheme.Text.Caveat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_regular"
            android:text="@string/about_version"
            android:textIsSelectable="false"
            app:fontFamily="@font/jetbrainsmono" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
