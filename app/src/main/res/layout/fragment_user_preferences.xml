<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_regular"
        android:paddingEnd="@dimen/padding_regular"
        android:paddingBottom="@dimen/padding_xlarge">

        <LinearLayout
            android:id="@+id/layoutPeriodicSync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/layoutAppearance"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                style="@style/AppTheme.Text.SectionTitle.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_preferences_periodic_sync" />

            <TextView
                style="@style/AppTheme.Text.Caveat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_preferences_periodic_sync_description" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonPeriodicSync"
                style="@style/AppTheme.SelectionButton"
                android:layout_marginTop="@dimen/margin_small"
                tools:text="@string/user_preferences_periodic_sync_24_hours" />

            <TextView
                style="@style/AppTheme.Text.Caveat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@string/user_preferences_periodic_sync_caveat" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutAppearance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/layoutPreferredDetailsView"
            app:layout_constraintTop_toBottomOf="@+id/layoutPeriodicSync">

            <TextView
                android:id="@+id/textViewAppearanceTitle"
                style="@style/AppTheme.Text.SectionTitle.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_preferences_appearance" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonAppearance"
                style="@style/AppTheme.SelectionButton"
                tools:text="@string/user_preferences_appearance_system_default" />

            <com.fibelatti.pinboard.core.android.customview.SettingToggle
                android:id="@+id/toggleDynamicColors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                app:settingDescription="@string/user_preferences_dynamic_colors_caveat"
                app:settingTitle="@string/user_preferences_dynamic_colors" />

            <TextView
                android:id="@+id/textViewDateFormatTitle"
                style="@style/AppTheme.Text.SectionTitle.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xlarge"
                android:text="@string/user_preferences_date_format" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonPreferredDateFormat"
                style="@style/AppTheme.SelectionButton"
                tools:text="@string/user_preferences_date_format_day_first" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutPreferredDetailsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/layoutBookmarksDescription"
            app:layout_constraintTop_toBottomOf="@+id/layoutAppearance">

            <TextView
                style="@style/AppTheme.Text.SectionTitle.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_preferences_preferred_details_view" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonPreferredDetailsView"
                style="@style/AppTheme.SelectionButton"
                tools:text="@string/user_preferences_preferred_details_in_app_browser" />

            <TextView
                style="@style/AppTheme.Text.Caveat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@string/user_preferences_preferred_details_view_caveat" />

            <com.fibelatti.pinboard.core.android.customview.SettingToggle
                android:id="@+id/toggleMarkAsReadOnOpen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                app:settingDescription="@string/user_preferences_preferred_details_view_mark_as_read_on_open_caveat"
                app:settingTitle="@string/user_preferences_preferred_details_view_mark_as_read_on_open" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutBookmarksDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/layoutEditAfterSharing"
            app:layout_constraintTop_toBottomOf="@+id/layoutPreferredDetailsView">

            <TextView
                style="@style/AppTheme.Text.SectionTitle.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_preferences_description_title" />

            <com.fibelatti.pinboard.core.android.customview.SettingToggle
                android:id="@+id/toggleAutoFillDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:settingDescription="@string/user_preferences_description_auto_fill_description"
                app:settingTitle="@string/user_preferences_description_auto_fill" />

            <com.fibelatti.pinboard.core.android.customview.SettingToggle
                android:id="@+id/toggleShowDescriptionInLists"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                app:settingDescription="@string/user_preferences_description_visible_in_lists_description"
                app:settingTitle="@string/user_preferences_description_visible_in_lists" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutEditAfterSharing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/layoutPrivateDefault"
            app:layout_constraintTop_toBottomOf="@+id/layoutBookmarksDescription">

            <TextView
                style="@style/AppTheme.Text.SectionTitle.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_preferences_edit_after_sharing_title" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonEditAfterSharing"
                style="@style/AppTheme.SelectionButton"
                tools:text="@string/user_preferences_edit_after_sharing_before_saving" />

            <TextView
                style="@style/AppTheme.Text.Caveat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@string/user_preferences_edit_after_sharing_description" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutPrivateDefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/layoutReadLaterDefault"
            app:layout_constraintTop_toBottomOf="@+id/layoutEditAfterSharing">

            <TextView
                style="@style/AppTheme.Text.SectionTitle.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_preferences_default_private" />

            <com.fibelatti.pinboard.core.android.customview.SettingToggle
                android:id="@+id/togglePrivateDefault"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:settingDescription="@string/user_preferences_default_private_description"
                app:settingTitle="@string/user_preferences_default_private_label" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutReadLaterDefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/layoutPrivateDefault">

            <TextView
                style="@style/AppTheme.Text.SectionTitle.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_preferences_default_read_later" />

            <com.fibelatti.pinboard.core.android.customview.SettingToggle
                android:id="@+id/toggleReadLaterDefault"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:settingDescription="@string/user_preferences_default_read_later_description"
                app:settingTitle="@string/user_preferences_default_read_later_label" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutDefaultTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/layoutReadLaterDefault">

            <TextView
                style="@style/AppTheme.Text.SectionTitle.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_preferences_default_tags" />

            <TextView
                style="@style/AppTheme.Text.Caveat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_preferences_default_tags_description" />

            <com.fibelatti.pinboard.core.android.customview.AddTagsLayout
                android:id="@+id/layoutAddTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
