<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="?android:colorBackground">

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupSearchActive"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:constraint_referenced_ids="textViewSearchActive,spaceSearchActive,buttonFilterClear,buttonFilterShare"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textViewSearchActive"
        style="@style/AppTheme.Text.Detail"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/margin_regular"
        android:layout_marginTop="@dimen/margin_xsmall"
        android:layout_marginBottom="@dimen/margin_small"
        android:background="@drawable/background_contrast_rounded"
        android:backgroundTint="?attr/colorSecondaryContainer"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/padding_regular"
        android:text="@string/search_active"
        android:textIsSelectable="false"
        app:layout_constraintBottom_toTopOf="@id/barrierSearchActive"
        app:layout_constraintEnd_toStartOf="@id/spaceSearchActive"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:id="@+id/spaceSearchActive"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/barrierSearchActive"
        app:layout_constraintEnd_toStartOf="@id/buttonFilterClear"
        app:layout_constraintStart_toEndOf="@id/textViewSearchActive"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonFilterClear"
        style="@style/Widget.Material3.Button.TonalButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/clickable_area"
        android:layout_marginHorizontal="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_xsmall"
        android:insetTop="@dimen/margin_xsmall"
        android:insetBottom="@dimen/margin_xsmall"
        android:text="@string/search_clear"
        android:textIsSelectable="false"
        android:textSize="@dimen/text_size_xsmall"
        app:cornerRadius="8dp"
        app:icon="@drawable/ic_close"
        app:iconPadding="@dimen/padding_xsmall"
        app:iconSize="16dp"
        app:layout_constraintBottom_toTopOf="@id/barrierSearchActive"
        app:layout_constraintEnd_toStartOf="@id/buttonFilterShare"
        app:layout_constraintStart_toEndOf="@id/spaceSearchActive"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonFilterShare"
        style="@style/Widget.Material3.Button.TonalButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/clickable_area"
        android:layout_marginEnd="@dimen/margin_regular"
        android:layout_marginBottom="@dimen/margin_xsmall"
        android:insetTop="@dimen/margin_xsmall"
        android:insetBottom="@dimen/margin_xsmall"
        android:text="@string/search_share"
        android:textIsSelectable="false"
        android:textSize="@dimen/text_size_xsmall"
        app:cornerRadius="8dp"
        app:icon="@drawable/ic_share"
        app:iconPadding="@dimen/padding_xsmall"
        app:iconSize="12dp"
        app:layout_constraintBottom_toTopOf="@id/barrierSearchActive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/buttonFilterClear"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrierSearchActive"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="groupSearchActive" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/AppTheme.ProgressBarHorizontalStyle"
        android:layout_marginHorizontal="@dimen/margin_regular"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/swipeToRefresh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barrierSearchActive"
        tools:visibility="visible" />

    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/layoutEmptyList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressBar" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeToRefresh"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressBar">

        <com.fibelatti.core.android.recyclerview.PagingRecyclerView
            android:id="@+id/recyclerViewPosts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/fab_offset_bottom"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/list_item_post" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
